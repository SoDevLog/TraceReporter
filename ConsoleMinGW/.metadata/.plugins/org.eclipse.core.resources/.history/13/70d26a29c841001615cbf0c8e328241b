#include "ASTrace.h"
#include "cMenu.h"
#include "cXCore.h"
#include "cXStack.h"

/*--------------------------------------------------------------------------*/

PMMENU_DECLARE(TChar);


/*--------------------------------------------------------------------------*/
void NT_TestMain( void )
{
	c_xstack_reset_usage();
	c_xthread_init();

    PMMenu_InitializeMainMenu();

    PMMENU_USE( TChar );

    PMMenu_ExecuteMainMenu();
    PMMenu_DeleteMainMenu();

	c_xmemdbg_dump_state();
	c_xthread_term();
}
